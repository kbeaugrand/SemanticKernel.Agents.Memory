{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "SemanticKernel.Agents.Memory": "Debug"
    }
  },
  "AzureOpenAI": {
    "Endpoint": "https://your-resource-name.openai.azure.com/",
    "ApiKey": "your-azure-openai-key-here",
    "EmbeddingModel": "text-embedding-ada-002",
    "CompletionModel": "gpt-4.1-mini"
  },
  "MarkitDown": {
    "ServiceUrl": "http://localhost:5000"
  },
  "TextChunking": {
    "Simple": {
      "MaxChunkSize": 500,
      "TextOverlap": 50,
      "SplitCharacters": [ "\n\n", "\n", ". " ]
    },
    "Semantic": {
      "MaxChunkSize": 3000,
      "MinChunkSize": 200,
      "TitleLevelThreshold": 1,
      "IncludeTitleContext": true
    }
  },
  "Pipeline": {
    "DefaultIndex": "docs",
    "HttpClientTimeout": "00:10:00"
  }
}
